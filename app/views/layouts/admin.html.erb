<!DOCTYPE html>
<html>
<head>
  <title>RubyShoop2023</title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  <%= javascript_importmap_tags %>
</head>

<body>

<%= render 'admin/navigation' %>
<%= render 'flash_messages' %>

<div class="container">
  <div class="row">
    <div class="col-lg-9">
      <%= yield %>
    </div>
    <div class="col-lg-3">
      <h4 class="my-4">Categories</h4>
      <div class="list-group">
        <% Category.all.each do |category| %>
          <%= link_to category.name, admin_admin_root_path(category: category.id), class: "list-group-item" %>
        <% end %>
      </div>

      <h4 class="my-4">Brands</h4>
      <div class="list-group">
        <% Brand.all.each do |brand| %>
          <%= link_to brand.name, admin_admin_root_path(brand: brand.id), class: "list-group-item" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
</body>
</html>
